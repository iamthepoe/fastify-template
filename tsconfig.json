{
  "compilerOptions": {
    // project options
    "lib": [ "ESNext" ],
    "outDir": "dist",
    "removeComments": true,
    "target": "ES6",

    // Module resolution
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "@server/*": ["src/infra/server/*"],
      "@database/*": ["src/infra/database/*"],
      "@utils/*": ["src/utils/*"],
    },
    // Source Map
    "sourceMap": true,
    "sourceRoot": "/",

    // Strict Checks
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": false,
    "strictNullChecks": true,

    // Linter Checks
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./**/*.ts"],
  "exclude": [ "node_modules/**/*" ]
}